<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_background"
    tools:context=".LearnDiphthongs">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/di_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:contentDescription="Diphthongs"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/diphthong_ic"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diphthongs"
                        android:textSize="30sp"
                        android:layout_margin="10dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diphthongs_expl"
                    android:layout_margin="5dp"
                    android:textColor="#000"
                    android:textSize="20sp"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="20dp">

                <GridLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tilte_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="3"
                    android:layout_centerInParent="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d1"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="ɪə" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ear"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal">
                            <Button
                                android:tag="rec"
                                android:text="ear"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>
                            <Button
                                android:text="ear"
                                android:tag="play_rec"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d2"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="eɪ"/>
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="eight"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="eight"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="eight"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="20dp">


                <GridLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tilte_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="4"
                    android:layout_centerInParent="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d3"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="ʊə" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="tour"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="tour"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="tour"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d4"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="ɔɪ" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="boy"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="boy"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="boy"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d5"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="əʊ" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="show"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="show"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="show"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>

                </GridLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="20dp">

                <GridLayout
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tilte_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="1"
                    android:columnCount="4"
                    android:layout_centerInParent="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d6"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="eə" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="air"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="air"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="air"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d7"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="aɪ"/>
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="eye"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="eye"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="eye"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/d8"
                            android:tag="di_sound"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:background="@drawable/dip_button"
                            android:layout_margin="5dp"
                            android:text="aʊ" />
                        <TextView
                            android:tag="di_text_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cow"
                            android:textSize="20sp"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:orientation="horizontal"
                            style="?android:buttonBarStyle">

                            <Button
                                android:tag="rec"
                                android:text="cow"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/rec_button"
                                android:layout_margin="5dp"/>

                            <Button
                                android:text="cow"
                                android:tag="play_rec"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/ply_button"/>
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
